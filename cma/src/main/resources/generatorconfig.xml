<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlContext" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
		<property name="suppressAllComments" value="true" />  
		
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.cma.util.GeneralMapper"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/cma?useSSL=false&amp;tinyInt1isBit=false"
                        userId="root"
                        password="1234">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.cma.pojo" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="com.cma.mapper" targetProject="src/main/java" type="XMLMAPPER"/>
 	
        <table tableName="user" 
        	enableUpdateByExample="true" 
        	enableDeleteByExample="true" 
        	enableSelectByExample = "true" 
        	selectByExampleQueryId = "true" 
			domainObjectName="Staff">
			<ignoreColumn column = "create_time" />
			<ignoreColumn column = "modify_time" />
		</table>
        <table tableName="staff_file" 
        	enableUpdateByExample="true" 
        	enableDeleteByExample="true" 
        	enableSelectByExample = "true" 
        	selectByExampleQueryId = "true" 
			domainObjectName="StaffFile">
			<ignoreColumn column = "id" />
			<ignoreColumn column = "create_time" />
			<ignoreColumn column = "modify_time" />
			<ignoreColumn column = "user_id" />
		</table>
    </context>
</generatorConfiguration>